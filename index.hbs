{{!< default}}
<div class="header__menu">
    <div class="menu menu__hero">
        <div class="linework linework__menu--white">
            {{> "menu"}}
        </div>
    </div>
</div>
<header class="header">
    <div class="header__logo">
        <a href="/">
            <img class="header__logo-image" src="{{asset "images/logo-white.png"}}" alt="The Discoverer Logo" />
        </a>
    </div>
    <nav class="navigation">
        <a class="navigation__link" href="/">All</a>
        <a class="navigation__link" href="/tag/discoveries">Discoveries</a>
        <a class="navigation__link" href="/tag/travel-tales">Travel Tales</a>
        <a class="navigation__link" href="/tag/guide-me">Guide Me</a>
        <a class="navigation__link" href="/tag/our-backpack">Our Backpack</a>
        <a class="navigation__link" href="/tag/discoverer-spotlight">Discoverer Spotlight</a>
    </nav>
</header>
{{#get "posts" filter="tags:hero"}}
    {{#foreach posts limit="1"}}
        <div class="header__background" style="background-image: url({{#if feature_image}}{{feature_image}}{{else}}{{asset 'images/header-hero-background.jpg'}}{{/if}}); background-size: cover;"></div>
        {{!-- <div class="header__background" style="background-image: url({{asset "images/header-hero-background.jpg"}}); background-size: cover;"></div> --}}
        <section class="hero hero--t-margin">
            <div class="container container--1400">
                <div class="hero__carousel">
                    <div class="carousel">
                        <article class="carousel__item">
                            <h3 class="carousel__subtitle">{{#primary_tag}}{{name}}{{/primary_tag}}</h3>
                            <h1 class="carousel__title">{{title}}</h1>
                            <a href="{{url}}">
                                <button class="button button__clear carousel__button">
                                    Read More
                                </button>
                            </a>
                            {{!-- <h3 class="carousel__subtitle">Guide Me</h3>
                            <h1 class="carousel__title">Lorem Ipsum Dolor Sit Amet Consectetuer Adipiscing Elit Sed Diam Nonummy Nibh.</h1>
                            <a href="">
                                <button class="button button__clear carousel__button">
                                    Read More
                                </button>
                            </a> --}}
                        </article>
                        <!-- <div class="hero__arrows">
                            <div class="linework linework__arrow linework__arrow--left"></div>
                            <div class="linework linework__arrow linework__arrow--right"></div>
                        </div> -->
                    </div>
                    <div class="hero__progress">
                        <!-- <div class="linework linework__progress"></div>
                        <div class="linework linework__progress"></div>
                        <div class="linework linework__progress"></div>
                        <div class="linework linework__progress"></div>
                        <div class="linework linework__progress"></div> -->
                    </div>
                </div>
            </div>
        </section>
    {{/foreach}}
{{/get}}
<section class="featured">
    <div class="container featured__container">
        {{#get "posts" include="tags" filter="tags:featured"}}
            {{#foreach posts limit="3"}}
                <article class="featured__item">
                    {{#primary_tag}}
                        <a href="{{url}}">
                            <h3 class="featured__subtitle">
                                {{name}}
                            </h3>
                        </a>
                    {{/primary_tag}}
                    <a href="{{url}}">
                        <h2 class="featured__title">
                            {{title}}
                        </h2>
                        <p class="featured__text">
                            {{excerpt words="22"}}
                        </p>
                    </a>
                </article>
            {{/foreach}}
            {{!-- <h3 class="carousel__subtitle">Guide Me</h3>
            <h1 class="carousel__title">Lorem Ipsum Dolor Sit Amet Consectetuer Adipiscing Elit Sed Diam Nonummy Nibh.</h1>
